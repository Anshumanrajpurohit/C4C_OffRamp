<script>
        function switchTab(sectionId, btn) {
            // Hide all sections
            document.querySelectorAll('.content-section').forEach(el => {
                el.classList.remove('active');
                setTimeout(() => {
                    if(!el.classList.contains('active')) el.style.display = 'none';
                }, 300); // Match CSS transition duration
            });
            // Show selected section
            const target = document.getElementById(sectionId);
            target.style.display = 'block';
            // Slight delay to allow display:block to render before opacity transition
            setTimeout(() => {
                target.classList.add('active');
            }, 10);
            // Update sidebar button styles
            document.querySelectorAll('.nav-btn').forEach(el => {
                // Reset to default styling
                el.classList.remove('bg-primary-light', 'dark:bg-green-900/30', 'text-primary', 'dark:text-green-400', 'border-primary', 'dark:border-green-600', 'shadow-sm');
                el.classList.add('text-text-muted-light', 'dark:text-text-muted-dark', 'hover:bg-gray-100', 'dark:hover:bg-gray-800', 'border-transparent');
                // Reset icon color inside button
                const icon = el.querySelector('.material-symbols-outlined');
                if(icon) {
                    icon.classList.remove('text-primary'); // remove active color
                }
            });
            // Apply active styling to clicked button
            btn.classList.remove('text-text-muted-light', 'dark:text-text-muted-dark', 'hover:bg-gray-100', 'dark:hover:bg-gray-800', 'border-transparent');
            btn.classList.add('bg-primary-light', 'dark:bg-green-900/30', 'text-primary', 'dark:text-green-400', 'border', 'border-primary', 'dark:border-green-600', 'shadow-sm');
        }
    </script>

</body></html>